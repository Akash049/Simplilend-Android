<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_ham"
                android:padding="5dp"
                android:id="@+id/ham_icon"
                android:tint="@color/white"
                android:layout_height="match_parent">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:text="Dashboard"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_upload"
                android:padding="10dp"
                android:tint="@color/white"
                android:layout_height="match_parent">

            </ImageView>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="4">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Notifications"
                        android:background="@drawable/rounded_button_brown_bg"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Upcoming EMI"
                        android:background="@drawable/rounded_button_brown_bg"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Search"
                        android:background="@drawable/rounded_button_brown_bg"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Current Loans"
                        android:background="@drawable/rounded_button_brown_bg"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Total Applications Processed"
                    android:background="@drawable/rounded_button_green_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="7"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:background="@drawable/rounded_button_green_bg"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_weight="2"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:id="@+id/new_loan_application"
                            android:background="@drawable/rounded_button_default_green_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_plus"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="New Loan Application">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_incomplete"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Incomplete application">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_chat"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Application Under Review">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg"
                            android:id="@+id/disburs"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_assignment"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Awaiting Disbursement">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg"
                            android:id="@+id/active_loans"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_assignment"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Active Loans"
                                android:clickable="true"
                                >

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_red_bg"
                            android:id="@+id/relo"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/rejected"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Rejected Loans"
                                >

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_assignment"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Delinquent Loans">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg"
                            android:id="@+id/closed_loans"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_assignment"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Successfully Closed Loans">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:src="@drawable/ic_assignment"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Top Up Loans">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:background="@drawable/rounded_button_blue_bg">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:padding="22dp"
                                android:src="@drawable/three_dots"
                                android:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:text="Other">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

    </LinearLayout>

</LinearLayout>