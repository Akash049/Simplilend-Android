<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginTop="10dp"
    app:cardElevation="5dp"
    card_view:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="#743D23"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="#SBDBDNFKKSGDTSD"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    ></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Personal"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:textSize="14dp"></TextView>


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="#653308"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:weightSum="13"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Applicant"
                        android:textColor="#FFF"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"

                        ></TextView>

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:src="@drawable/ic_person_blue_24dp"
                        android:paddingRight="40dp"
                        ></ImageView>

                    <TextView
                        android:id="@+id/rej_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Danyl Fernandes"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:text="Email"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="2dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/rej_email"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Unverified"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Mobile"
                        android:textColor="#FFF"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="2dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/rej_number"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Unverified"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:text="Comment"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="2dp"
                        ></TextView>
                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Rejected by Credit Bureau"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:weightSum="15"
                    android:backgroundTint="#6E2C16"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:text="Date"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/rej_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="2019-09-05"
                        android:textColor="#FFF"
                        android:textStyle="bold">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        ></LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:text="Requested Amount"
                        android:paddingLeft="10dp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/requested_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        tools:text=" 1 00000 INR">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        ></LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:text="Requested Tenure"
                        android:paddingLeft="10dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/requested_tenure"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="5 Year(s)"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        ></LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:text="Purpose"
                        android:paddingLeft="10dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/rej_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Medical"
                        android:textColor="#FFF"
                        android:textStyle="bold"></TextView>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="View"
                        android:backgroundTint="#00C4CC"
                        android:textColor="#FFF"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="40dp"
                        ></Button>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>